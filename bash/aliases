# create simple project structure
alias create_structure="mkdir -p {trunk/src/_/{assets/{fonts,images,javascripts/{src,js},stylesheets/{src,css}},config},tags/,branches/} && touch trunk/src/index.html && touch trunk/src/Gemfile"

# show hidden files
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"

# hide hidden files
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
